// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @unique @default(autoincrement())
  createdAt DateTime   @default(now()) @db.Date
  username  String     @unique
  email     String     @unique
  password  String
  picture   String?    @default("https://w7.pngwing.com/pngs/753/432/png-transparent-user-profile-2018-in-sight-user-conference-expo-business-default-business-angle-service-people-thumbnail.png")
  posts     Post[]
  comments  Comment[]
  likes     Likes[]
  follow    Follower[]
  bio       String     @default("")
}

model Follower {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now()) @db.Date
  user_id           User     @relation(fields: [userId], references: [id])
  userId            Int      @unique
  following_user_id Int[]    @default([])
  follower_user_id  Int[]    @default([])
}

model Post {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  title       String
  url         String      @unique
  description String
  ingredients String[]       @default([])
  details     String
  author      User?       @relation(fields: [authorId], references: [id])
  authorId    Int?
  tags        PostToTag[]
  comments    Comment[]
  like        Likes?
}

model Tag {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  name      String      @unique
  posts     PostToTag[]
}

model PostToTag {
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  tag       Tag      @relation(fields: [tagId], references: [id])
  tagId     Int

  @@id([postId, tagId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @db.Date
  text      String
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
  post      Post?    @relation(fields: [postId], references: [id])
  postId    Int?
}

model Likes {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @db.Date
  amount    Int      @default(0)
  user      User[]
  post      Post?    @relation(fields: [postId], references: [id])
  postId    Int?     @unique
  userslikes Int[]   @default([])
}
